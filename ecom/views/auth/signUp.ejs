<%- include("../partials/header") %>
<%- include("../partials/leyout") %>

<div class="container">
  <div class="columns is-centered">
    <div class="column is-one-quarter">
      <form method="POST">
        <h1 class="title">Sign Up</h1>
        <div class="field">
          <label class="label">Email</label>
          <input required class="input" placeholder="Email" name="email" />
          <!-- <p class="help is-danger">${getError(errors, 'email')}</p> -->
          <% errors.forEach(error => { %>
          <% if (error.param === 'email') { %>
          <p class="help is-danger"> <%= error.msg %> </p>
          <% } %>
          <% }); %>
        </div>
        <div class="field">
          <label class="label">Password</label>
          <input required class="input" placeholder="Password" name="password" type="password" />
          <!-- <p class="help is-danger">${getError(errors, 'password')}</p> -->
          <% errors.forEach(error => { %>
          <% if (error.param === 'password') { %>
          <p class="help is-danger"> <%= error.msg %> </p>
          <% } %>
          <% }); %>
        </div>
        <div class="field">
          <label class="label">Password Confirmation</label>
          <input required class="input" placeholder="Password Confirmation" name="confirmPassword" type="password" />
          <!-- <p class="help is-danger">${getError(
                  errors,
                  'passwordConfirmation'
                )}</p> -->
          <% errors.forEach(error => { %>
          <% if (error.param === 'confirmPassword') { %>
          <p class="help is-danger"> <%= error.msg %> </p>
          <% } %>
          <% }); %>
        </div>
        <button class="button is-primary">Submit</button>
      </form>
      <a href="/sign-in">Have an account? Sign In</a>
    </div>
  </div>
</div>
<%- include("../partials/header") %>